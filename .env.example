# Bablify Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Alternative API endpoints
# OPENAI_API_BASE=https://api.openai.com/v1

# Docker Configuration
COMPOSE_PROJECT_NAME=bablify

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Network Configuration
# Uncomment and modify if you need custom networking
# WEBRTC_HOST=0.0.0.0
# WEBRTC_PORT=8282

# Model Configuration
# Uncomment to override default model paths
# MODEL_ROOT=./models
# AVATAR_ROOT=./resource/avatar

# Mac M3 Optimizations (automatically detected)
PYTORCH_ENABLE_MPS_FALLBACK=1
PYTORCH_MPS_HIGH_WATERMARK_RATIO=0.0
ACCELERATE_USE_CPU=1

# Memory Management
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8
VECLIB_MAXIMUM_THREADS=8
NUMEXPR_NUM_THREADS=8
